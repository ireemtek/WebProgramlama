@model Post

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <div class="container-fluid">
        <h2 class="h5 no-margin-bottom">Post Ekleme Alanına Hoş Geldiniz</h2>
    </div>
</div>

<div class="col-lg-12">
    <div class="block">

        <div class="block-body">
            <section class="no-padding-top">
                <div class="container-fluid"> 
                        <div class="row">
                            <div class="col-md-12">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Subject" class="control-label">Konu</label>
                <input asp-for="Subject" class="form-control" />
                <span asp-validation-for="Subject" class="text-danger"></span>
            </div>
            <div class="col-md-12">
                <label asp-for="Text" class="control-label">İçerik</label>
                <textarea id="editor1" asp-for="Text"></textarea>
                <script>
                    CKEDITOR.replace('editor1');
                </script>
                <span asp-validation-for="Text" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="Image" class="control-label">Resim</label>
                <input asp-for="Image" type="file" class="form-control-file" id="exampleFormControlFile1">
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    <label asp-for="CatName" class="control-label">Kategori</label>
                    <input asp-for="CatName" class="form-control" />
                    <span asp-validation-for="CatName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Ekle" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Geri Dön</a>
</div>
</div>
                </section>
                </div>
        </div>
    </div>

