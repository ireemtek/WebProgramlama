@model Post

@{
    ViewData["Title"] = "PictureUpdate";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <div class="container-fluid">
        <h2 class="h5 no-margin-bottom">Post Ekleme Alanına Hoş Geldiniz</h2>
    </div>
</div>

<div class="col-lg-12">
    <div class="block">

        <div class="block-body">
            <section class="no-padding-top">
                <div class="container-fluid">
                    <div class="block-body">
                        <div class="panel-body">
                            <p>Şuandaki Resim:</p>
                            <img src="~/img/post/@Model.Image" width="80" height="80" />
                            <form asp-action="PictureUpdate" enctype="multipart/form-data">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="Id" />
                                <div class="form-group">
                                    <label asp-for="Image" class="control-label">Post Fotoğrafı</label>
                                    <input asp-for="Image" type="file" class="form-control-file" name="Image" id="exampleFormControlFile1">
                                    <span asp-validation-for="Image" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <input type="submit" value="Kaydet" class="btn btn-primary" />
                                </div>
                            </form>
                        </div>
                    </div>

                    <div>
                        <a asp-action="Index">Geri Dön.</a>
                    </div>
                </div>
                </section>
                </div>
        </div>
    </div>


